{
  "name": "triptalk-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Triptalk 모노레포 - UI 컴포넌트와 프론트엔드 애플리케이션",
  "scripts": {
    "dev": "pnpm --filter frontend dev",
    "build": "pnpm --filter ui-components build && pnpm --filter frontend build",
    "build:ui": "pnpm --filter ui-components build",
    "build:frontend": "pnpm --filter frontend build",
    "storybook": "pnpm --filter ui-components storybook",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20",
    "typescript": "^5",
    "prettier": "^3.0.0",
    "eslint": "^8"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}